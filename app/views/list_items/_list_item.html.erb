<%= turbo_frame_tag list_item, class: "min-w-full" do %>
  <div class="flex flex-col">
    <div class="flex justify-end">
      <%= link_to "Close", list_items_path, class: "text-sky-700/50 hover:text-sky-700 transition" %>
    </div>

    <div>
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= list_item.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Description:</strong>
        <%= list_item.description %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">List position:</strong>
        <%= list_item.list_position %>
      </p>
    </div>
  </div>
<% end %>
