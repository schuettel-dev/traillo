<%= turbo_frame_tag list_item do %>
  <div class="flex flex-col">
    <div class="flex justify-end">
      <%= link_to "Close", list_items_path, class: "text-sky-700/50 hover:text-sky-700 transition" %>
    </div>

    <div>
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= list_item.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Description:</strong>
        <%= list_item.description %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">List position:</strong>
        <%= list_item.list_position %>
      </p>
    </div>

    <div>
      <%= button_to "Delete", list_item_path(list_item), class: "rounded py-2 px-8 bg-gray-200 hover:bg-red-500 hover:text-white transition", method: :delete, form: { "data-turbo-confirm": "Are you sure?" } %>
    </div>

    <% if action_name != "show" %>
      <%= link_to "Show this list item", list_item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this list item', edit_list_item_path(list_item), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
<% end %>
