<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">List items</h1>
  </div>

  <%= render "list_items", list_items: @list_items %>

  <%= turbo_frame_tag ListItem.new do %>
    <%= render "link_to_new" %>
  <% end %>
</div>
